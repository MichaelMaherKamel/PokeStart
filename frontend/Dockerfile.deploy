FROM node:22-alpine

WORKDIR /app

# Copy package.json and lock file
COPY package.json pnpm-lock.yaml ./

# Install pnpm
RUN npm install -g pnpm@10.7.1

# Install only production dependencies
RUN pnpm install --prod

# Copy built files
COPY .output/ ./.output/
COPY public/ ./public/

# Expose port 3000
EXPOSE 3000

# Start the application
CMD ["pnpm", "start"]